generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  fullName  String
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
  rides     Ride[]
}

model Driver {
  id           String   @id @default(uuid())
  fullName     String
  phone        String
  vehicleType  String
  vehiclePlate String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  rides        Ride[]
}

enum RideStatus {
  REQUESTED
  ACCEPTED
  COMPLETED
  CANCELLED
}

model Ride {
  id              String     @id @default(uuid())
  pickupLocation  String
  dropoffLocation String
  status          RideStatus @default(REQUESTED)
  userId          String
  driverId        String?
  createdAt       DateTime   @default(now())
  user            User       @relation(fields: [userId], references: [id])
  driver          Driver?    @relation(fields: [driverId], references: [id])
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
}
