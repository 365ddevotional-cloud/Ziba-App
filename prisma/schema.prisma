generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  SUSPENDED
}

enum DriverStatus {
  PENDING
  APPROVED
  SUSPENDED
}

enum VehicleType {
  CAR
  BIKE
  VAN
}

enum RideStatus {
  REQUESTED
  ACCEPTED
  COMPLETED
  CANCELLED
}

model User {
  id        String     @id @default(uuid())
  fullName  String
  email     String     @unique
  phone     String?
  city      String?
  status    UserStatus @default(ACTIVE)
  createdAt DateTime   @default(now())
  rides     Ride[]
}

model Driver {
  id           String       @id @default(uuid())
  fullName     String
  phone        String
  vehicleType  VehicleType  @default(CAR)
  vehiclePlate String
  status       DriverStatus @default(PENDING)
  createdAt    DateTime     @default(now())
  rides        Ride[]
  incentives   Incentive[]
}

model Ride {
  id              String     @id @default(uuid())
  pickupLocation  String
  dropoffLocation String
  fareEstimate    Float?
  status          RideStatus @default(REQUESTED)
  userId          String
  driverId        String?
  createdAt       DateTime   @default(now())
  user            User       @relation(fields: [userId], references: [id])
  driver          Driver?    @relation(fields: [driverId], references: [id])
  payment         Payment?
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  phone     String?
  createdAt DateTime @default(now())
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

model Payment {
  id        String        @id @default(uuid())
  amount    Float
  status    PaymentStatus @default(PENDING)
  rideId    String        @unique
  createdAt DateTime      @default(now())
  ride      Ride          @relation(fields: [rideId], references: [id])
}

model Incentive {
  id        String   @id @default(uuid())
  amount    Float
  reason    String
  driverId  String
  createdAt DateTime @default(now())
  driver    Driver   @relation(fields: [driverId], references: [id])
}

enum DirectorRole {
  OPERATIONS
  FINANCE
  COMPLIANCE
}

model Director {
  id        String       @id @default(uuid())
  fullName  String
  email     String       @unique
  role      DirectorRole
  region    String
  createdAt DateTime     @default(now())
}
