model User {
  id            String          @id @default(uuid())
  fullName      String
  email         String          @unique
  phone         String?
  city          String?
  // SQLite: String | PostgreSQL: UserStatus
  status        String          @default("ACTIVE")
  // SQLite: String | PostgreSQL: UserType (RIDER | DRIVER | DIRECTOR | TRIP_COORDINATOR)
  userType      String          @default("RIDER")
  phoneVerified Boolean         @default(false)
  passwordHash  String?
  averageRating Float           @default(0)
  totalRatings  Int             @default(0)
  isTestAccount Boolean         @default(false)
  testDisabled  Boolean         @default(false)
  createdAt     DateTime        @default(now())
  rides         Ride[]
  bookedRides   Ride[]          @relation("BookedRides")
  ratings       UserRating[]
  tips          Tip[]
  driverProfile DriverProfile?
  passengers    TripPassenger[]
  shareParticipants ShareParticipant[]
}

model Driver {
  id            String         @id @default(uuid())
  fullName      String
  email         String         @unique
  phone         String
  // SQLite: String | PostgreSQL: VehicleType
  vehicleType   String         @default("CAR")
  vehiclePlate  String
  // SQLite: String | PostgreSQL: DriverStatus
  status        String         @default("PENDING")
  isOnline      Boolean        @default(false)
  currentRate   Float          @default(1.0)
  averageRating Float          @default(0)
  totalRatings  Int            @default(0)
  avgStartTime  String?
  avgEndTime    String?
  isTestAccount Boolean        @default(false)
  testDisabled  Boolean        @default(false)
  createdAt     DateTime       @default(now())
  rides         Ride[]
  incentives    Incentive[]
  ratings       DriverRating[]
  tips          Tip[]
  driverProfileId String?      @unique
  driverProfile DriverProfile? @relation(fields: [driverProfileId], references: [id])
}

model DriverProfile {
  id                 String   @id @default(uuid())
  userId             String   @unique
  fullName           String
  phone              String
  email              String
  profilePhotoUrl    String?
  driversLicenseNumber String
  licenseExpiryDate  DateTime
  // SQLite: String | PostgreSQL: VehicleType
  vehicleType        String
  vehicleMake        String
  vehicleModel       String
  vehicleColor       String
  vehiclePlateNumber String
  isApproved         Boolean  @default(false)
  // SQLite: String | PostgreSQL: DriverProfileStatus
  status             String   @default("PENDING")
  rejectionReason    String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  user               User     @relation(fields: [userId], references: [id])
  driver             Driver?

  @@index([userId])
  @@index([status])
}

model Ride {
  id              String        @id @default(uuid())
  pickupLocation  String
  dropoffLocation String
  fareEstimate    Float?
  // SQLite: String | PostgreSQL: RideStatus
  status          String        @default("REQUESTED")
  // SQLite: String | PostgreSQL: RideMode (PRIVATE | SHARE)
  rideMode        String        @default("PRIVATE")
  shareGroupId    String?       // Link to ShareGroup if shared ride
  maxPassengers   Int           @default(1) // 1 for PRIVATE, 2 for SHARE
  userId          String
  bookedByUserId  String?       // Trip Coordinator or Rider who booked/paid
  passengerId     String?       // Trip Passenger (if booked for someone else)
  driverId        String?
  createdAt       DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id])
  bookedBy        User?         @relation("BookedRides", fields: [bookedByUserId], references: [id])
  passenger       TripPassenger? @relation(fields: [passengerId], references: [id])
  shareGroup      ShareGroup?   @relation(fields: [shareGroupId], references: [id])
  driver          Driver?       @relation(fields: [driverId], references: [id])
  payment         Payment?
  driverRating    DriverRating?
  userRating      UserRating?
  
  @@index([bookedByUserId])
  @@index([passengerId])
  @@index([shareGroupId])
  @@index([rideMode])
}

model TripPassenger {
  id              String   @id @default(uuid())
  fullName        String
  phone           String
  email           String?
  notes           String?
  createdByUserId String
  createdAt       DateTime @default(now())
  createdBy       User     @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)
  rides           Ride[]
  
  @@index([createdByUserId])
}

model ShareGroup {
  id              String   @id @default(uuid())
  // SQLite: String | PostgreSQL: ShareGroupStatus (OPEN | FULL | CLOSED | CANCELLED)
  status          String   @default("OPEN")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  participants    ShareParticipant[]
  rides           Ride[]
  
  @@index([status])
}

model ShareParticipant {
  id                String      @id @default(uuid())
  shareGroupId      String
  userId            String
  pickupLocation    String
  dropoffLocation   String
  pickupLat         Float?
  pickupLng         Float?
  destLat           Float?
  destLng           Float?
  fareShareAmount   Float?
  // SQLite: String | PostgreSQL: PaymentStatus (PENDING | PAID | REFUNDED)
  paymentStatus     String      @default("PENDING")
  createdAt         DateTime    @default(now())
  shareGroup        ShareGroup  @relation(fields: [shareGroupId], references: [id], onDelete: Cascade)
  user              User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([shareGroupId, userId])
  @@index([shareGroupId])
  @@index([userId])
}

model Admin {
  id           String   @id @default(uuid())
  email        String   @unique
  phone        String?
  passwordHash String?
  createdAt    DateTime @default(now())
}

